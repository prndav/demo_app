= simple_form_for( [answer, comment] , html: { class: 'form-horizontal' } ) do |f|
  = render 'shared/form_errors', object: f.object
  = f.hidden_field :parent_id, value: parent ? parent.id : 0
  = f.hidden_field :l_margin, value: parent ? parent.l_margin + 20 : 0
  = f.hidden_field :user_id, value: current_user.id
  = f.input :body, input_html: { class: 'span5', rows: '5' }, label: false
  .control-group
    .controls
      = f.button :submit, class: 'btn-primary'
      = submit_tag 'Cancel', type: :reset, class: 'btn btn-danger discard'
