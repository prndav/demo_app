.answer
  .answer-date
    = answer.created_at.to_formatted_s(:long)
  .answer-body
    %p
      = answer.body
      = link_to 'leave comment', new_answer_comment_path(answer), class: 'comment-link', remote: true
      %span.hide-comments show_comments
      .comments
        - render_comments_for(answer) do |comment|
          .comment{ style: "margin-left: #{comment.l_margin}px" }
            %p.comment-content
              = comment.body
            = link_to 'reply', new_answer_comment_path(answer,comment_id: comment.id), class: 'reply-link', remote: true

