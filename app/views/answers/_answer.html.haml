.answer
  .answer-date
    = answer.created_at.to_formatted_s(:long)
  .answer-body
    %p
      = answer.body
      = link_to 'leave comment', { controller: 'comments', action: 'new_comment', id: answer }, class: 'comment-link', remote: true
    .comments
      - render_comments_for(answer) do |comment|
        .comment
          %p.comment-content{ style: "margin-left: #{comment.l_margin}px" }
            = comment.body
            = link_to 'reply', { controller: 'comments', action: 'new_reply', id: comment }, class: 'reply-link', remote: true

